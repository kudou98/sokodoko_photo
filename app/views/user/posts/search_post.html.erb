<div class="card-list-container py-5">
 <% @posts.each do |post| %>
 <div class="card w-50 mx-auto mt-4 shadow-lg">
  <%= link_to user_path(post.user.id) do %>
   <%= image_tag post.get_image, class:"card-img-top"; %>
  <% end %>
  <div class="card-body">
   <div class="row">
    <div class="col-2">
     <%= image_tag post.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
    </div>
    <div class="col-10">
     <p class="card-title">
      <%= link_to(post_path(post.id), class:"text-dark") do %>
       <strong><i class="far fa-flag"></i><span> <%= post.location %></span></strong>
      <% end %>
     </p>
     <p class="card-text">説明文：<%= post.body %></p>

     <span><%= link_to post.tag, search_post_path(keyword: post.tag) %></span>

     <span><i class="fas fa-user"></i> By <%= post.user.name %> ｜ </span>
     <span><%= link_to "#{post.post_comments.count} コメント", post_path(post.id), class:"text-dark" %></span>

    </div>
   </div>
  </div>
 </div>
</div>
<% end %>
