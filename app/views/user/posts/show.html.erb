<div class="main">
 <h1>投稿詳細</h1>
  <div>
  <%= image_tag @post.post_image, size: '320x240' %>
  <p>撮影場所：<%= @post.location %></p>
  <p>説明文：<%= @post.body %></p>
  <p>プロフィール画像：<%= image_tag @post.user.get_profile_image(100,100) %></p>
  <p>ユーザーネーム：<%= @post.user.name %></p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>

  <p><%= link_to tag.tag_name, search_post_path(keyword: tag.tag_name) %></p>



  <% if @post.user == current_user %>
    <%= link_to "削除", post_path(@post), method: :delete %>
  <% end %>

  <% if @post.favorited?(current_user) %>
    <p>
      <%= link_to post_favorite_path(@post.id), method: :delete do %>
        ♥<%= @post.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_favorites_path(@post.id), method: :post do %>
        ♡<%= @post.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
</div>


<div>
  <p>コメント件数：<%= @post.post_comments.count %></p>
  <% @post_comments.each do |post_comment| %>
   <tr>
    <td><%= image_tag post_comment.user.get_profile_image(100,100) %></td>
    <td><%= post_comment.user.name %></td>
    <td><%= post_comment.comment %></td>
    <td><%= link_to "削除", post_comment_path(@post, post_comment), method: :delete %></td>
   </tr>
  <% end %>
</div>
<div>
  <%= form_with model:[@post, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
</div>