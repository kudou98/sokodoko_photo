<h1>写真投稿</h1>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @post do |f| %>
    <h4>写真を選択</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>撮影場所</h4>
      <%= f.text_field :location %>
    <h4>説明文</h4>
      <%= f.text_area :body %>
    <%= f.submit '投稿' %>
  <% end %>